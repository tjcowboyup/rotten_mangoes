<h1>Rotten Mangoes - All Users</h1>

<h3><%= link_to "Create New User", new_admin_user_path %></h3>

<table>
<%= paginate @users %>
<% @users.each do |user| %>
  <tr>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to "edit", edit_admin_user_path(user) %></td>
    <td><%= link_to "delete", admin_user_path(user), method: :delete, confirm: "You sure?" %></td>
  </tr>
</table>
<% end %>