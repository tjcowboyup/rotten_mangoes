<h1>Rotten Mangoes - All Users</h1>

<h3><%= link_to "Create New User", new_admin_user_path %></h3>

<% @users.each do |user| %>
  <h2><%= user.full_name %>(<%= link_to "edit", edit_user_path(user) %>, <%= link_to "delete", user_path(user), method: :delete, confirm: "You sure?" %>)</h2>
  <h3>email: <%= user.email %></h3>
  <h4>first joined: <%= formatted_date(user.created_at) %></h4>
  <h4>last updated: <%= formatted_date(user.updated_at) %></h4>
  <h4><%= link_to "edit", edit_admin_user_path(user) %></h4>
  <h4><%= link_to "delete", user_path(user), method: :delete, :data => { :confirm => 'You sure?' } %></h4>
  <hr>
<% end %>