<%= link_to "Back to all movies", movies_path %><br/>

<h1><%= @user.id %></h1>
<h2><%= @user.firstname %></h2>
<p><%= @user.email %> </p>
<p><%= @user.created_at %></p>
<p><%= @user.updated_at %></p>

<% if @reviews %>
<h3>Reviews by <em><%= @user.full_name %></em></h3>
  <% @reviews.each do |review| %>
    <p><%= review.text %></p>
    <p><%= review.rating_out_of_ten %>/10</p>
  <% end %>
<% end %>